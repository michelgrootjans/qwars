<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="NHibernateDemo"
                   namespace="NHibernateDemo.Entities"
                   default-lazy="false">

  <class name="Weapon" abstract="true">
    <id column="Id" type="Guid">
      <generator class="guid" />
    </id>
    <!--<discriminator column="weapon_type" />-->

    <property name="Price" />
    <many-to-one name="Owner" />

    <union-subclass name="Knife" table="Knives" />
    <union-subclass name="Sword" table="Swords" />
    <union-subclass name="Gun" table="Guns" />
    
  </class>

</hibernate-mapping>